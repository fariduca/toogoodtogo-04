# TooGoodToGo Production Environment Template
# Copy to .env.production and fill in values before deployment
# NEVER commit .env.production to version control

# =============================================================================
# REQUIRED: Telegram Bot Configuration
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# =============================================================================
# REQUIRED: Database Configuration
# =============================================================================
POSTGRES_USER=toogoodtogo
POSTGRES_PASSWORD=change_this_strong_password
POSTGRES_DB=toogoodtogo
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# =============================================================================
# REQUIRED: Redis Configuration
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# REQUIRED: Security
# =============================================================================
SECRET_KEY=generate_a_secure_random_key_here

# =============================================================================
# OPTIONAL: Stripe Payment Configuration (leave empty if not using payments)
# =============================================================================
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# OPTIONAL: Monitoring & Observability
# =============================================================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Deployment directory on the droplet
DEPLOY_DIR=/opt/toogoodtogo

# Backup directory
BACKUP_DIR=/opt/backups/postgres

# Docker Compose file for production
DOCKER_COMPOSE_FILE=docker-compose.prod.yml

# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=120

# Application version (set during deployment)
APP_VERSION=latest

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
# Domain for SSL certificate
DOMAIN=your-domain.com

# Email for Let's Encrypt notifications
SSL_EMAIL=admin@your-domain.com
