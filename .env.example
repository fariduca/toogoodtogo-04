# Environment Variables for Telegram Marketplace Bot
# Copy this file to .env and fill in your values

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=telegram_token

# PostgreSQL Database Connection
DATABASE_URL=postgresql://user:password@localhost:5432/telegram_marketplace

# Redis Connection
REDIS_URL=redis://localhost:6379/0

# Stripe API Credentials
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Optional: Stripe Price Mapping (JSON format)
STRIPE_PRICE_MAPPING={}

# Logging Configuration
LOG_LEVEL=INFO

# Application Environment
APP_NAME=telegram-marketplace
ENVIRONMENT=development
