# Environment Variables for Telegram Marketplace Bot
# Copy this file to .env and fill in your values

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=telegram_token

# PostgreSQL Database Connection
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/toogoodtogo

# Redis Connection
REDIS_URL=redis://localhost:6379/0
REDIS_LOCK_TTL_SECONDS=5

# Discovery & Geolocation
NEARBY_RADIUS_KM=5.0

# Azure Blob Storage (for offer images)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=offer-images
AZURE_STORAGE_BASE_URL=https://your_account.blob.core.windows.net

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# Background Jobs
EXPIRATION_CHECK_INTERVAL_SECONDS=60

# Admin Configuration (comma-separated Telegram user IDs)
ADMIN_TELEGRAM_IDS=123456789,987654321

# Logging Configuration
LOG_LEVEL=INFO

# Application Environment
APP_NAME=telegram-marketplace
ENVIRONMENT=development

